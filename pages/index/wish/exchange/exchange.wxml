  <view bindtap="censelPopupBox" class="popup-box-cover"></view>
  <view class="popup-box">
    <image bindtap="censelPopupBox" class="popup-box-close" src="/images/close@3x.png" wx:if="{{true}}"></image>
    <view class='content-box'>
      <view class='image-box'>
        <image src='https://i0.hdslb.com/bfs/archive/fd4147c51f4b2a737b8dec0b2c8623e9786612fa.png'></image>
      </view>
      <view class='info'>
        <view class='name'>卫生间毛巾</view>
        <view class='value'>2 心愿</view>
      </view>
    
    </view>
    <view class='exchange'>
      <view class='exchange-btn'>确认兑换</view>
    </view>
  </view>
</view>