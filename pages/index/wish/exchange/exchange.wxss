/* <!-- 商品兑换 --> */
.main{
  padding-bottom: 90px;
}
.main .image{
  width: 100%;
  height: 300px;
}
.main .image image{
  width: 100%;
  height: 100%
}
.info{
  padding: 15px;
  background-color: #fff
}
.info .name{
  padding-bottom: 10px;
  font-size: 16px;
  color: black;
}
.info .value{
  font-size: 13px;
  color: #B88951;
}
.desc{
  width: 100%;
  margin-top: 15px;
  padding: 25px 15px 30px 15px;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 14px;
}
.main .explain view{
  position: relative;
  padding-top: 10px;
}
.main .explain .explain-list{
  padding-left: 14px
}
.main .explain .explain-list::before{
  content: '.';
  position: absolute;
  top:5px;
  left: 0
}
.exchange{
  width: 100%;
  position: fixed;
  right: 0;
  bottom: 0;
  padding: 25rpx;
  box-sizing: border-box;
  background-color: #fff;
  
}
.exchange .exchange-btn{
  width: 100%;
  padding: 10px 0;
  background-color: #B88951;
  color: #fff;
  font-size:15px;
  text-align: center 
}

.buttom-popup-box-component {
    position: fixed;
    left: 0px;
    top: 0px;
    width: 100%;
    height: 100%;
    overflow: hidden;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    z-index: -10;
    opacity: 0;
    display: none;
}

.buttom-popup-box-component.show {
    display: block;
    z-index: 998;
    opacity: 1;
}

.buttom-popup-box-component.show.animate .popup-box {
    transform: translateY(0);
}

.buttom-popup-box-component.show .popup-box-cover {
    z-index: 997;
}

.buttom-popup-box-component.show .popup-box {
    z-index: 999;
}

.buttom-popup-box-component .popup-box-cover {
    background: rgba(0,0,0,0.66);
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: absolute;
    left: 0px;
    top: 0px;
    z-index: -10;
}

.buttom-popup-box-component .popup-box {
    transition: transform .5s;
    transition: transform .5s,-webkit-transform .5s;
    z-index: -10;
    background: #fff;
    transform: translateY(100%);
    padding-top: 15px;
    padding-bottom: 15px;
    width: 100%;
    max-height: 90%;
    overflow: scroll-y;
    bottom: 0px;
    left: 0px;
    box-shadow: 0 7.5px 12.5px 0 rgba(0,0,0,0.15);
    position: fixed;
}

.buttom-popup-box-component .popup-box .popup-box-close {
    width: 14px;
    height: 14px;
    position: absolute;
    right: 0px;
    top: 5px;
    padding: 15px;
}
.buttom-popup-box-component .exchange{
  position: static;
}
.buttom-popup-box-component .content-box{
  display: flex;
  padding: 20rpx 25rpx;
}
.buttom-popup-box-component .content-box .image-box>image{
  width: 150rpx;
  height: 150rpx;
}