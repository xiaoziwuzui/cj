/* pages/index/squaregames/squaregames.wxss */
.squaregamespage{
  border-top: 1rpx solid #f0f0f0;
  box-sizing:border-box;

}
.squaregamespage .group-list {
    margin-top: 10px;
    padding-bottom: 60px;
}
.squaregamespage .group-list .item {
    border-bottom: solid 1rpx #e6e6e6;
}
.squaregamespage .group-list .item {
    border-bottom: solid 1rpx #e6e6e6;
}
.square-lottery {
    display: flex;
    align-items: center;
    position: relative;
    box-sizing: border-box;
    background: #fff;
}
.square-lottery.normal-square-lottery-component {   
    width: 100%;
    height: 120px;
    display: flex;
    box-sizing: border-box;
    border-bottom: 1rpx solid #e6e6e6;
    background-color: #ffffff;
}
.squaregamespage .square-loadmore {
    font-size: 13px;
    color: #2573b8;
    text-align: center;
    padding-top: 20px;
}
.square-lottery .prize-info .name {
    font-size: 15px;
    color: rgba(0, 0, 0, 0.568);
    line-height: 1.33;
    max-height: 38px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}
.square-lottery.normal-square-lottery-component .prize-image {
    width: 90px;
    height: 90px;
    flex: 0 0 90px;
    margin-right: 15px;
    margin-left: 15px;
    background-color: ghostwhite
}
.square-lottery.normal-square-lottery-component .prize-image image{
  width: 100%;
  height: 100%;
}
.square-lottery .lottery-type {
    margin-top: 7px;
    font-size: 12px;
    letter-spacing: .3px;
    color: rgba(0,0,0,0.5);
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}
.square-lottery .tags {
    display: flex;
    justify-content: flex-start;
    flex-wrap: nowrap;
    margin-right: 5px;
    max-width: 195px;
}

.square-lottery .tags .tag {
    display: flex;
    flex: 0 1 auto;
    margin: 8px 10px 0 0;
    height: 20px;
    padding: 0 8px;
    background-color: #ffffff;
    color: #575757;
    font-weight: bold;
    box-sizing: border-box;
    align-items: center;
    position: relative;
}
.square-lottery .tags .tag:before {
    border: 1px solid rgba(0,0,0,0.5);
    width: 200%;
    height: 200%;
    position: absolute;
    top: 0;
    left: 0;
    transform: scale(.5);
    pointer-events: none;
    transform-origin: 0 0;
    content: '';
}

.square-lottery .tags .tag:last-child {
    margin-right: 0;
}

.square-lottery .tags .tag text {
    font-size: 11px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.square-lottery .tags .tag image {
    width: 8px;
    height: 8px;
    margin-right: 4px;
    display: flex;
    flex: 0 0 auto;
}

.square-lottery .tags .tag.red {
    border-color: #ad8b8b;
    flex: 0 1 auto;
}

.square-lottery .tags .tag.red:before {
    border: 1px solid #ad8b8b;
    width: 200%;
    height: 200%;
    position: absolute;
    top: 0;
    left: 0;
    transform: scale(.5);
    pointer-events: none;
    transform-origin: 0 0;
    content: '';
}
.square-lottery .tags .tag.red text {
    color: #8f5b5b;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.square-lottery .end-status {
    position: absolute;
    width: 68px;
    height: 68px;
    text-align: center;
    border-radius: 50%;
    background: rgba(0,0,0,0.8);
    box-shadow: 0 3px 10.5px 0 rgba(0,0,0,0.3);
    font-size: 14px;
    left: 26px;
    top: 26px;
    z-index: 1;
}
.square-lottery .end-status .circle {
    width: 60px;
    height: 60px;
    line-height: 60px;
    text-align: center;
    position: absolute;
    left: 2px;
    top: 2px;
    border: 2px solid rgba(255,255,255,0.3);
    border-radius: 50%;
    color: rgba(255,255,255,0.8);
    font-size: 15px;
    font-weight: bold;
}
.squaregamespage .square-loadmore {
    font-size: 13px;
    color: #2573b8;
    text-align: center;
    padding-top: 20px;
}

.squaregamespage .square-loadmore.highlight {
    opacity: .5;
}