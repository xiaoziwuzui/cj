/* <!-- 我的 页面 --> */

.profilepage .user-profile {
    width: 100%;
    background-color: #f1f1f1;
    /* animation: .25s linear pageShow forwards; */
}
.profilepage .user-profile .follow-official-account {
    height: 44px;
    background: #fff;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.profilepage .user-profile .follow-official-account .heart-icn {
    width: 18px;
    height: 16px;
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    margin-right: 9px;
    margin-left: 15px;
}

.profilepage .user-profile .follow-official-account .desc {
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    font-size: 13px;
    color: rgba(26,26,26,0.9);
    letter-spacing: .3px;
    margin-right: 8px;
}

.profilepage .user-profile .follow-official-account .guide-arrow-icn {
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    width: 22px;
    height: 12px;
}

.profilepage .user-profile .follow-official-account .pendding {
    -webkit-box-flex: 1;
    flex: 1 1 auto;
}

.profilepage .user-profile .follow-official-account .close {
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    width: 10px;
    height: 10px;
    padding: 10px 15px;
}

.profilepage .user-profile .follow-official-account .close.highlight {
    opacity: .7;
}

/* 个人信息样式 */
.profilepage .user-profile .user-profile-dashboard {
    margin-top: 10px;
    width: 100%;
}

.profilepage .user-profile .user-profile-dashboard .user-info {
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    height: 90px;
    background: #fff;
    border-bottom: 1rpx solid rgba(0,0,0,0.1);
}

.profilepage .user-profile .user-profile-dashboard .user-info.highlight {
    background: #ddd;
}

.profilepage .user-profile .user-profile-dashboard .user-info .user-info-content {
    -ms-flex-item-align: center;
    align-self: center;
    -webkit-box-flex: 1;
    flex: 1 1 auto;
    display: -ms-flexbox;
    display: flex;
    margin-left: 15px;
}

.profilepage .user-profile .user-profile-dashboard .user-info .user-info-content .user-info-avatar {
    -ms-flex-item-align: center;
    align-self: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    margin-right: 10px;
}

.profilepage .user-profile .user-profile-dashboard .user-info .user-info-content .user-info-name {
    -ms-flex-item-align: center;
    align-self: center;
    font-size: 15px;
    letter-spacing: .4px;
    color: #1a1a1a;
}

.profilepage .user-profile .user-profile-dashboard .user-info .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: #e2453a;
    margin-right: 6px;
    -webkit-box-flex: 0;
    flex: 0 0 auto;
}

.profilepage .user-profile .user-profile-dashboard .user-info .user-address-content {
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    -ms-flex-item-align: center;
    align-self: center;
    text-align: right;
    font-size: 13px;
    letter-spacing: .3px;
    color: #bb7c38;
    font-weight: bold;
    margin-right: 15px;
}

.profilepage .user-profile .user-profile-dashboard .user-info .auth-btn {
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    -ms-flex-item-align: center;
    align-self: center;
    text-align: right;
    font-size: 13px;
    letter-spacing: .3px;
    color: #bb7c38;
    font-weight: bold;
}


.profilepage .user-profile .user-profile-dashboard .user-info .user-address-content.highlight {
    color: rgba(128,128,128,0.4);
}

.profilepage .user-profile .user-profile-dashboard .user-info .user-address-content .arrow-right {
    border: solid #bb7c38;
    border-width: 0 1.5px 1.5px 0;
    display: inline-block;
    padding: 3px;
    transform: rotate(-45deg);
    position: relative;
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    margin-left: 4px;
    margin-bottom: 1px;
    -ms-flex-item-align: center;
    align-self: center;
    -ms-flex-positive: 0;
    flex-grow: 0;
}
/* game-info */
.profilepage .user-profile .user-profile-dashboard .game-info{
    background: #fff;
    width: 100%;
    height: 90px;
    display: -ms-flexbox;
    display: flex;
    overflow: hidden;
}

.profilepage .user-profile .user-profile-dashboard .game-info .game-info-item {
    -ms-flex-item-align: center;
    align-self: center;
    -webkit-box-flex: 0;
    flex: 0 0 33.3333%;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
}
.profilepage .user-profile .user-profile-dashboard .game-info .game-info-item.highlight .game-info-item-content .game-info-count {
    color: rgba(26,26,26,0.4);
}

.profilepage .user-profile .user-profile-dashboard .game-info .game-info-item.highlight .game-info-item-content .game-info-label {
    color: rgba(128,128,128,0.4);
}

.profilepage .user-profile .user-profile-dashboard .game-info .game-info-item.game-info-create {
    border-left: 1rpx solid rgba(0,0,0,0.1);
    border-right: 1rpx solid rgba(0,0,0,0.1);
}

.profilepage .user-profile .user-profile-dashboard .game-info .game-info-item .game-info-item-content .game-info-count {
    font-size: 21px;
    font-weight: bold;
    color: #1a1a1a;
    text-align: center;
}

.profilepage .user-profile .user-profile-dashboard .game-info .game-info-item .game-info-item-content .game-info-label {
    font-size: 13px;
    letter-spacing: .3px;
    color: #808080;
    text-align: center;
}
/* .infos */
.profilepage .user-profile .infos {
    margin-top: 10px;
    background: #fff;
}

.profilepage .user-profile .infos .info-split-line {
    height: 0px;
    border-bottom: solid 1rpx rgba(0,0,0,0.1);
    margin-left: 15px;
}

.profilepage .user-profile .infos .info-item {
    display: -ms-flexbox;
    display: flex;
    height: 50px;
    font-size: 15px;
    letter-spacing: .4px;
    color: #1a1a1a;
    padding-left: 15px;
    background: #fff;
    text-align: left;
    border-radius: 0px;
    padding-right: 0px;
    border:none;
}

.profilepage .user-profile .infos .info-item.send-push {
    border-radius: 0;
    border:none;
}
.profilepage .user-profile .infos .info-item.send-push::after {
  border:none;
  border-radius: 0;
}

.profilepage .user-profile .infos .info-item.highlight {
    background: rgba(0,0,0,0.15);
}

.profilepage .user-profile .infos .info-item .desc {
    font-size: 13px;
    letter-spacing: .3px;
    color: #808080;
    -webkit-box-flex: 0;
    flex: 0 0 auto;
}

.profilepage .user-profile .infos .info-item image {
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    width: 18px;
    height: 18px;
    -ms-flex-item-align: center;
    align-self: center;
    margin-right: 10px;
}

.profilepage .user-profile .infos .info-item .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: #e2453a;
    margin-right: 6px;
    -webkit-box-flex: 0;
    flex: 0 0 auto;
}

.profilepage .user-profile .infos .info-item text {
    -ms-flex-item-align: center;
    align-self: center;
    -webkit-box-flex: 1;
    flex: 1 1 auto;
}

.profilepage .user-profile .infos .info-item text.arrow-right {
    border: solid #c7c7cc;
    border-width: 0 1.5px 1.5px 0;
    display: inline-block;
    padding: 3px;
    transform: rotate(-45deg);
    position: relative;
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    margin-left: 4px;
    -ms-flex-item-align: center;
    align-self: center;
    -ms-flex-positive: 0;
    flex-grow: 0;
    margin-right: 15px;
}

.profilepage .user-profile .infos .info-item .tips-name {
    text-align: right;
    color: #808080;
    font-size: 13px;
    line-height: 39rpx;
}

.profilepage .user-profile .infos .info-item .new-feature {
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    font-size: 13px;
    color: #dd3e34;
    display: -ms-flexbox;
    display: flex;
    font-weight: bold;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.profilepage .user-profile .infos .info-item .new-feature .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: #e2453a;
    margin-right: 6px;
}

.profilepage .user-profile .infos .info-item .badge {
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    width: 18px;
    height: 18px;
    margin-right: -5px;
}
